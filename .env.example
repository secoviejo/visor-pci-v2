# ============================================
# CONFIGURACIÓN DE NOTIFICACIONES - EJEMPLO
# ============================================
# Copia este archivo como .env y completa con tus datos reales

# --- Configuración de Email (Gmail) ---
EMAIL_SERVICE=gmail
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_contraseña_de_aplicacion_aqui
EMAIL_FROM_NAME=Sistema PCI - Campus

# --- Configuración de Telegram ---
TELEGRAM_BOT_TOKEN=tu_bot_token_aqui
TELEGRAM_CHAT_ID=tu_chat_id_aqui

# --- Configuración del Servidor ---
PORT=3000
NODE_ENV=production
JWT_SECRET=una_clave_larga_y_segura_aqui

# --- Hardware (Modbus/BACnet) ---
ENABLE_HARDWARE=true
# IS_DOCKER=true # Se activa automáticamente en Docker Compose

# --- Base de Datos ---
DB_PATH=./pci.db
